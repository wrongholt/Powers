{
    "type": "APL",
    "version": "1.3",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 27,
                "textSizeSecondary": 23,
                "textSizeDetails": 20,
                "textSizeSecondaryHint": 25
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color",
            "values": [
                {
                    "color": "@colorTextPrimary"
                }
            ]
        },
        "textStyleBase0": {
            "description": "Thin version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "100"
            }
        },
        "textStyleBase1": {
            "description": "Light version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "300"
            }
        },
        "textStyleBase2": {
            "description": "Regular version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "500"
            }
        },
        "mixinBody": {
            "values": {
                "fontSize": "@textSizeBody"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinDetails": {
            "values": {
                "fontSize": "@textSizeDetails"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStylePrimary": {
            "extend": [
                "textStyleBase1",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleBase0",
                "mixinSecondary"
            ]
        },
        "textStyleBody": {
            "extend": [
                "textStyleBase1",
                "mixinBody"
            ]
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        },
        "textStyleDetails": {
            "extend": [
                "textStyleBase2",
                "mixinDetails"
            ]
        }
    },
    "onMount": [],
    "graphics": {},
    "commands": {
        "slideInRight": {
            "parameters": [
                "duration",
                "distance",
                "delay"
            ],
            "commands": [
                {
                    "type": "AnimateItem",
                    "duration": "${duration}",
                    "delay": "${delay || 0}",
                    "value": [
                          {
                            "property": "transform",
                            "from": [
                                {
                                    "translateX": 0
                                }
                            ],
                            "to": [
                                {
                                    "translateX": "${distance && ('-' + distance) || '-500'}"
                                }
                            ]
                        }
                    
                    ]
                },
                {
                    "type": "AnimateItem",
                    "duration": "${duration}",
                    "delay": "${delay || 0}",
                    "value": [
                          {
                            "property": "transform",
                            "from": [
                                {
                                    "translateX": "${distance && ('-' + distance) || '-500'}"
                                }
                            ],
                            "to": [
                                {
                                    "translateX": 0
                                }
                            ]
                        }
                    
                    ]
                }
            ]
        }
    },
    "layouts": {
        "FullHorizontalListItem": {
            "parameters": [
                "listLength"
            ],
            "item": [
                {
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "alignItems": "center",
                    "justifyContent": "end",
                    "items": [
                        {
                            "type": "Image",
                            "width": "30vh",
                            "height": "60vh",
                            "source": "${data.image2.sources[0].url}",
                            "scale": "best-fit",
                            "position": "absolute",
                            "bottom": "50"
                        },
                        {
                            "type": "Text",
                            "text": "${data.textContent.primaryText.text}",
                            "style": "textStyleBody",
                            "maxLines": 1
                        },
                        {
                            "type": "Text",
                            "text": "${data.textContent.secondaryText.text}",
                            "style": "textStyleDetails"
                        },
                        {
                            "type": "Text",
                            "text": "Level ${data.textContent.thirdText.text} ",
                            "style": "textStyleDetails"
                        },
                        {
                            "type": "Text",
                            "text": "${ordinal} | ${listLength}",
                            "paddingBottom": "20dp",
                            "color": "white",
                            "spacing": "5dp"
                        }
                    ]
                }
            ]
        },
        "HorizontalListItem": {
            "item": [
                {
                    "type": "Container",
                    "maxWidth": 528,
                    "minWidth": 312,
                    "paddingLeft": 16,
                    "paddingRight": 16,
                    "height": "100vh",
                    "items": [
                        {
                            "type": "Container",
                            "item": [
                                {
                                    "type": "Image",
                                    "width": "35vh",
                                    "height": "50vh",
                                    "source": "${data.image.sources[0].url}",
                                    "overlayColor": "rgba(0, 0, 0, 0.2)",
                                    "scale": "fill"
                                },
                                {
                                    "type": "Image",
                                    "width": "30vh",
                                    "height": "40vh",
                                    "source": "${data.image2.sources[0].url}",
                                    "position": "absolute",
                                    "alignSelf": "center",
                                    "right": "25%",
                                    "bottom": "3%"
                                }
                            ]
                        },
                        {
                            "type": "Text",
                            "style": "textStyleSecondary",
                            "spacing": 12,
                            "text": "<b>${ordinal}.</b> ${data.textContent.primaryText.text}",
                            "maxLines": 1,
                            "fontStyle": "normal",
                            "fontSize": "32"
                        },
                        {
                            "type": "Text",
                            "text": "${data.textContent.secondaryText.text}",
                            "style": "textStyleDetails",
                            "spacing": 4
                        },
                        {
                            "type": "Text",
                            "text": "Level ${data.textContent.thirdText.text} ",
                            "style": "textStyleDetails"
                        }
                    ]
                }
            ]
        },
        "ListTemplate2": {
            "parameters": [
                "backgroundImage",
                "title",
                "logo",
                "hintText",
                "listData"
            ],
            "items": [
                {
                    "when": "${viewport.shape == 'round'}",
                    "type": "Container",
                    "height": "100%",
                    "width": "100%",
                    "items": [
                        {
                            "type": "Image",
                            "position": "absolute",
                            "height": "100vh",
                            "width": "100vw",
                            "overlayColor": "rgba(0, 0, 0, 0.6)",
                            "source": "${backgroundImage}",
                            "scale": "best-fill"
                        },
                        {
                            "type": "Sequence",
                            "scrollDirection": "horizontal",
                            "data": "${listData}",
                            "height": "100%",
                            "width": "100%",
                            "numbered": true,
                            "item": {
                                "type": "TouchWrapper",
                                "onPress": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "ItemSelected",
                                            "${ordinal}",
                                            "${data.textContent.primaryText.text}"
                                        ]
                                    }
                                ],
                                "item": [
                                    {
                                        "type": "FullHorizontalListItem",
                                        "listLength": "${payload.listTemplate2ListData.listPage.listItems.length}"
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "type": "Container",
                    "height": "100vh",
                    "width": "100vw",
                    "items": [
                        {
                            "type": "Image",
                            "source": "${backgroundImage}",
                            "scale": "best-fill",
                            "overlayColor": "rgba(0,0,0,0.4)",
                            "width": "100vw",
                            "height": "100vh",
                            "position": "absolute"
                        },
                        {
                            "type": "AlexaHeader",
                            "headerTitle": "${title}",
                            "headerAttributionImage": "${logo}"
                        },
                        {
                            "type": "Sequence",
                            "scrollDirection": "horizontal",
                            "paddingLeft": "@marginLeft",
                            "paddingRight": "@marginRight",
                            "data": "${listData}",
                            "height": "70vh",
                            "width": "100%",
                            "numbered": true,
                            "item": {
                                "type": "TouchWrapper",
                                "onPress": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "ItemSelected",
                                            "${ordinal}",
                                            "${data.textContent.primaryText.text}"
                                        ]
                                    }
                                ],
                                "item": [
                                    {
                                        "type": "HorizontalListItem"
                                    }
                                ],
                                "onMount": [
                                    {
                                        "type": "slideInRight",
                                        "duration": 2000,
                                        "delay": 500
                                    }
                                ]
                            }
                        },
                        {
                            "type": "AlexaFooter",
                            "footerHint": "${payload.listTemplate2ListData.hintText}",
                            "position": "absolute",
                            "top": "85vh"
                        },
                        {
                            "type": "HorizontalListItem"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            {
                "type": "ListTemplate2",
                "backgroundImage": "${payload.listTemplate2Metadata.backgroundImage.sources[0].url}",
                "title": "${payload.listTemplate2Metadata.title}",
                "hintText": "${payload.listTemplate2Metadata.hintText}",
                "logo": "${payload.listTemplate2Metadata.logoUrl}",
                "listData": "${payload.listTemplate2ListData.listPage.listItems}"
            }
        ]
    }
}